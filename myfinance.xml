<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        >

   <RadioGroup
        android:id="@+id/radioAccountType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/savingAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving Account" 
            android:checked="true" />

        <RadioButton
            android:id="@+id/loanAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Account" />

    </RadioGroup>



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Account Number"
            android:textColor="#424242"
            android:textStyle="bold"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Intial balance"
            android:textColor="#424242"
            android:textStyle="bold"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Current balance"
            android:textColor="#424242"
            android:textStyle="bold"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Payment amount"
            android:textColor="#424242"
            android:textStyle="bold"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Intrest rate"
            android:textColor="#424242"
            android:textStyle="bold"
            />

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="#1976D2"
                android:drawableLeft="@mipmap/ic_launcher"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Save"
                android:textColor="#FFFFFF"
                />

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E53935"
                android:drawableLeft="@drawable/ic_star_white_24dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                />

    </LinearLayout>
</LinearLayout>